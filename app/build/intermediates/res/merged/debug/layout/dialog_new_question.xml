<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_container_padding"
        >
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_container_padding"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="请输入问题:"
            android:id="@+id/textView7" />
        <EditText
            android:id="@+id/tv_insert_title"
            android:background="@drawable/common_border_small"
            android:padding="@dimen/common_container_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="@dimen/common_container_padding"
            />
        <Button
            android:id="@+id/change_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_container_padding"
            android:layout_marginRight="@dimen/common_container_padding"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/large_container_padding"
            android:background="@drawable/common_button_dark"
            android:gravity="center"
            android:padding="@dimen/common_container_padding"
            android:text="提交"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>