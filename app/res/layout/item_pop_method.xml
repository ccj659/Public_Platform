<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_new_container"
        android:layout_marginLeft="@dimen/medium_container_padding"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/pop"
            >

            <LinearLayout
                android:background="@drawable/selector_massage_item"
                android:id="@+id/ll_search_area"
                android:layout_marginTop="@dimen/common_container_padding"
                android:layout_width="wrap_content"
                android:padding="@dimen/small_container_padding"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:layout_marginLeft="@dimen/common_container_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="区域显示"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/small_container_padding"
                android:id="@+id/ll_search_local"
                android:background="@drawable/selector_massage_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_marginLeft="@dimen/common_container_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索周边"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/small_container_padding"
                android:id="@+id/ll_search_addr"
                android:background="@drawable/selector_massage_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_marginLeft="@dimen/common_container_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索地点"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>